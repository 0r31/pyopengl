								</mml:mtr>
								<mml:mtr>
									<mml:mtd>
										<mml:msub>
											<mml:mi>G</mml:mi>
											<mml:mi>r</mml:mi>
										</mml:msub>
										<mml:mo>=</mml:mo>
										<mml:mi>min</mml:mi>
										<mml:mfenced>
											<mml:mn>0</mml:mn>
											<mml:mrow>
												<mml:mrow>
													<mml:msub>
														<mml:mi>G</mml:mi>
														<mml:mi>d</mml:mi>
													</mml:msub>
													<mml:msub>
														<mml:mi>d</mml:mi>
														<mml:mi>G</mml:mi>
													</mml:msub>
												</mml:mrow>
